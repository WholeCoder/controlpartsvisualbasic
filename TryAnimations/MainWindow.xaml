        xmlns:local="clr-namespace:TryAnimations"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid AutomationProperties.Name="grd">
        <Button Content="Button" HorizontalAlignment="Left" Margin="74,129,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" AutomationProperties.Name="button1"/>
